{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node16",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@src/*": ["src/*"]
    },
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist"]
}
