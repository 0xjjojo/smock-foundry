{
  "name": "foundry-mock-generator",
  "version": "1.0.0",
  "private": true,
  "description": "A mock contract generator for Foundry",
  "homepage": "https://github.com/defi-wonderland/mock-foundry#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/mock-foundry-private.git"
  },
  "license": "AGPL-3.0",
  "author": "Wonderland",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && node copy-templates.js",
    "lint:check": " yarn lint:ts-logic && forge fmt check",
    "lint:fix": "sort-package-json && forge fmt && yarn lint:ts-logic --fix",
    "lint:ts-logic": "eslint ./src/**/*.ts",
    "mock-gen": "ts-node src/run.ts mock-gen",
    "test": "forge build && cross-env mocha 'test/**/*.spec.ts'"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.ts": "eslint ./src/**/*.ts",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@defi-wonderland/solidity-utils": "0.0.0-4298c6c6",
    "@ethersproject/abi": "5.7.0",
    "ethers": "5.7.0",
    "handlebars": "4.7.7",
    "nodemon": "2.0.22",
    "sinon": "15.1.0",
    "solc": "0.8.20",
    "typescript": "5.0.4",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/chai": "4.3.5",
    "@types/chai-as-promised": "7.1.5",
    "@types/fs-extra": "11.0.1",
    "@types/mocha": "10.0.1",
    "@types/node": "20.2.3",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "cross-env": "7.0.3",
    "eslint": "8.40.0",
    "husky": "8.0.3",
    "lint-staged": "10",
    "mocha": "10.2.0",
    "sort-package-json": "2.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0"
  }
}
